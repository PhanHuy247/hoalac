<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.vnpt.iot.hoalac.core.activity.dailyNoteActivity.DailyNoteActivity">
    <RelativeLayout
        android:elevation="3dp"
        android:background="@color/blue"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <ImageButton
            android:onClick="pressBack"
            android:background="@color/nonColor"
            android:src="@mipmap/btn_back_white"
            android:layout_width="50dp"
            android:layout_height="match_parent" />
        <TextView
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:text="@string/menu_diary_work"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageButton
            android:visibility="gone"
            android:onClick="goAdd"
            android:layout_alignParentRight="true"
            android:background="@color/nonColor"
            android:src="@mipmap/plus"
            android:layout_width="50dp"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <ListView
        android:id="@+id/listJournal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>
</LinearLayout>
