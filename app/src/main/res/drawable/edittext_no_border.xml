<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="-1dp"
        android:left="-1dp"
        android:right="-1dp"
        android:top="-1dp">
        <shape android:shape="rectangle">
            <stroke
                android:color="#00000000" />
            <solid android:color="#00000000" />
            <stroke
                android:width="0dp"
                android:color="@color/green"/>
            <padding
                android:top="10dp"
                android:bottom="10dp"/>
        </shape>
    </item>
</layer-list>